{{ include('admin/messages.html.twig') }}
<form class="forms-sample" method="post">

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-1" role="tab"
               aria-controls="pills-home" aria-selected="true">Genel Bilgiler</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-2" role="tab"
               aria-controls="pills-profile" aria-selected="false">Email Server</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-3" role="tab"
               aria-controls="pills-contact" aria-selected="false">Hakkımızda</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-4" role="tab"
               aria-controls="pills-contact" aria-selected="false">İletişim</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-5" role="tab"
               aria-controls="pills-contact" aria-selected="false">Referanslar</a>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-1" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="form-group">
                <label>Adı</label>
                <input type="text" name="setting[title]" value="{{ setting.title }}" class="form-control"
                       placeholder="title">
            </div>
            <div class="form-group">
                <label>Anahtar Kelimeler</label>
                <input type="text" name="setting[keywords]" value="{{ setting.keywords }}" class="form-control"
                       placeholder="keywords">
            </div>
            <div class="form-group">
                <label>Kısa Açıklama</label>
                <input type="text" name="setting[description]" value="{{ setting.description }}" class="form-control"
                       placeholder="description">
            </div>
            <div class="form-group">
                <label>Firma adı</label>
                <input type="text" name="setting[company]" value="{{ setting.company }}" class="form-control"
                       placeholder="company">
            </div>
            <div class="form-group">
                <label>Adresi</label>
                <input type="text" name="setting[adress]" value="{{ setting.adress }}" class="form-control"
                       placeholder="adress">
            </div>
            <div class="form-group">
                <label>Fax</label>
                <input type="text" name="setting[fax]" value="{{ setting.fax }}" class="form-control"
                       placeholder="fax">
            </div>
            <div class="form-group">
                <label>Durumu</label>
                <select name="setting[status]" class="form-control">
                    <option>{{ setting.status }}</option>
                    <option>True</option>
                    <option selected>False</option>
                </select>
            </div>

        </div>
        <div class="tab-pane fade" id="pills-2" role="tabpanel" aria-labelledby="pills-profile-tab">
            <div class="form-group">
                <label>Email Server</label>
                <input type="text" name="setting[smtpserver]" value="{{ setting.smtpserver }}" class="form-control">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" name="setting[smtpemail]" value="{{ setting.smtpemail }}" class="form-control">
            </div>
            <div class="form-group">
                <label>Email Şifre</label>
                <input type="text" name="setting[smptpassword]" value="{{ setting.smptpassword }}" class="form-control">
            </div>
            <div class="form-group">
                <label>SMTP Port</label>
                <input type="text" name="setting[smtpport]" value="{{ setting.smtpport }}" class="form-control">
            </div>
        </div>
        <div class="tab-pane fade" id="pills-3" role="tabpanel" aria-labelledby="pills-contact-tab">
            <div class="form-group">

                <textarea id="aboutus" name="setting[aboutus]"> {{ setting.aboutus }} </textarea>
            </div>

        </div>
        <div class="tab-pane fade" id="pills-4" role="tabpanel" aria-labelledby="pills-contact-tab">
            <div class="form-group">

                <textarea id="contact" name="setting[contact]"> {{ setting.contact }} </textarea>
            </div>

        </div>
        <div class="tab-pane fade" id="pills-5" role="tabpanel" aria-labelledby="pills-contact-tab">


                <textarea id="referances" name="setting[referances]"> {{ setting.referances }} </textarea>
            </div>

        </div>



    <button type="submit" class="btn btn-success mr-2">Kaydet</button>

</form>
<script>
    ClassicEditor
        .create(document.querySelector('#contact'))
        .catch(error => {
            console.error(error);
        });
</script>
<script>
    ClassicEditor
        .create(document.querySelector('#aboutus'))
        .catch(error => {
            console.error(error);
        });
</script>
<script>
    ClassicEditor
        .create(document.querySelector('#referances'))
        .catch(error => {
            console.error(error);
        });
</script>