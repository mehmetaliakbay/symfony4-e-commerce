{% extends 'adminbase.html.twig' %}

{% block title %}Kategori Detay{% endblock %}

{% block content %}
<!--Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!--Content Header (Page Header) -->
    <section class="content-header">
        <h1>
            Ürün Detay
        </h1>
    </section>
    <!--Main Content-->
    <section class="content">
        <!--User List Table-->
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ product.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ product.type }}</td>
            </tr>

            <tr>
                <th>Amount</th>
                <td>{{ product.amount }}</td>
            </tr>
            <tr>
                <th>Pprice</th>
                <td>{{ product.pprice }}</td>
            </tr>
            <tr>
                <th>Sprice</th>
                <td>{{ product.sprice }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ product.min }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ product.detail|raw }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>

            <tr>
                <th>Category_id</th>
                <td>{{ product.categoryId }}</td>
            </tr>

            <tr>
                <th>Status</th>
                <td>{{ product.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_product_index') }}">back to list</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('admin/product/_delete_form.html.twig') }}

                </div>
                <!--User List Table-->
    </section>
    <!--/.content-->
</div>
    <!--/.content-wrapper-->
{% endblock %}
