{% extends 'frontbase.html.twig' %}

{% block title %} Sepet - Online Alış Veriş Mağazası{% endblock %}


{% block sidebar %} {{ include ('home/_usersidebar.html.twig') }} {% endblock %}
{% block content %}
    <div class="span8">
        <ul class="breadcrumb">
            <li><a href="{{ path('home') }}">Home</a> <span class="divider">/</span></li>
            <li><a href="products.html">Order Items</a> <span class="divider">/</span></li>
            <li class="active">Preview</li>
        </ul>
        <div class="well well-small">
            <div class="row-fluid">
                <div class="span8">
                    <h4>Sipariş Detay</h4>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ order.id }}</td>
                        </tr>
                        <tr>
                            <th>Userid</th>
                            <td>{{ order.userid }}</td>
                        </tr>
                        <tr>
                            <th>Miktar</th>
                            <td>{{ order.amount }}</td>
                        </tr>
                        <tr>
                            <th>İsim</th>
                            <td>{{ order.name }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td>{{ order.adress }}</td>
                        </tr>
                        <tr>
                            <th>Şehir</th>
                            <td>{{ order.city }}</td>
                        </tr>
                        <tr>
                            <th>Telefon</th>
                            <td>{{ order.phone }}</td>
                        </tr>
                        <tr>
                            <th>Shipinfo</th>
                            <td>{{ order.shipinfo }}</td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>{{ order.status }}</td>
                        </tr>
                        <tr>
                            <th>Not</th>
                            <td>{{ order.note }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Ürün İsmi</th>
                            <th>Satış Fiyatı</th>
                            <th>Alınan Miktar</th>
                            <th>Toplam</th>
                            <th>Durum</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set total = 0 %}
                        {% for rs in orderdetail %}
                            <tr>
                                <td>{{ rs.id }}</td>
                                <td>{{ rs.name }}</td>
                                <td>{{ rs.price }}</td>
                                <td>{{ rs.quantity }}</td>
                                <td>{{ rs.amount }}</td>
                                <td>{{ rs.status }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Order Detail</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="5">Toplam Alışveriş Tutarı : <b>{{ order.amount }} TL</b></td>
                        </tr>
                        </tbody>
                    </table>


                    <a href="{{ path('orders_index') }}">back to list</a>


                </div>
            </div>
        </div>
    </div>
    </div>



{% endblock %}