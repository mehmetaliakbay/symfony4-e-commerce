{% extends 'frontbase.html.twig' %}

{% block title %} Profil Bilgilerim - Online Alış Veriş Mağazası{% endblock %}


{% block sidebar %} {{ include ('home/_usersidebar.html.twig') }} {% endblock %}
{% block content %}
    <div class="span8">
        <ul class="breadcrumb">
            <li><a href="{{ path('home') }}">Anasayfa</a> <span class="divider">/</span></li>
            <li><a href="products.html">Profil Bilgileri</a> <span class="divider">/</span></li>
            <li class="active">Önizleme</li>
        </ul>
        <div class="well well-small">
            <div class="row-fluid">
                <div class="span8">
                    <h4>Üye Profil Bilgileri</h4>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ app.user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ app.user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ app.user.roles|join }}</td>
                        </tr>
                        <tr>
                            <th>isim</th>
                            <td>{{ app.user.name }}</td>
                        </tr>
                        <tr>
                            <th>Adres</th>
                            <td>{{ app.user.address }}</td>
                        </tr>
                        <tr>
                            <th>Şehir</th>
                            <td>{{ app.user.city }}</td>
                        </tr>
                        <tr>
                            <th>Telefon</th>
                            <td>{{ app.user.phone }}</td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>{{ app.user.status }}</td>
                        </tr>

                        </tbody>
                    </table>



                </div>
            </div>
        </div>
    </div>
    </div>



{% endblock %}